{
  "mappings": {
    "product": { 
      "_all":       { "enabled": true }, 
        "properties": {
          "category": { "type": "keyword" }, 
          "brand" : { "type":"keyword" },
          "model": { "type":"keyword" },
          "description":  { "type": "text" },
          "price":  { "type": "float" },
          "created":  { "type": "date" },
          "review": { 
            "type" : "nested",
            "properties" : {
              "author" : { "type" : "keyword" },
              "rating" : { "type":"byte" },
              "comment" : { "type":"text" }
            }
          },
          "image": { "type":"text", "include_in_all" : false },
          "more_info" : { "type":"object" }
        }
    }
  }
}


